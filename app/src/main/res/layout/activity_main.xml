<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="5dp"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Biodata Seventeen"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:layout_marginBottom="32dp"/>
    <ImageView
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:src="@drawable/seventeen"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btn_buka_performance"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:src="@drawable/performance"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/btn_buka_rap"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:src="@drawable/rap"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:id="@+id/btn_buka_vocal"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:src="@drawable/vocal"
            android:scaleType="fitCenter"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(Tekan gambar untuk membuka galeri)"
        android:textStyle="italic"
        android:layout_marginBottom="32dp"
        />


</LinearLayout>
